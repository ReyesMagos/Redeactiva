<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="co.gov.coldeportes.redeactiva.redapptiva.ComentarioActivity" >

    <TextView
        android:id="@+id/tlblComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comentario" />

    <EditText
        android:id="@+id/txtComent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Campo para ingresar su comentario"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/btnCOmentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Comentar"
        android:contentDescription="Boton para Comentar la noticia que eligio"
        android:src="@drawable/ic_launcher" />

    <ListView
        android:id="@+id/listComentarios"
        android:layout_width="match_parent"
        android:layout_height="565dp" >
    </ListView>

</LinearLayout>